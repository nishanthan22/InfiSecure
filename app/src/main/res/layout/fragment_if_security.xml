<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.IFSecurityFragment"
    android:background="@color/bg_primary_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/work_sans_medium"
        android:padding="20dp"
        android:text="Authentication enabled services"
        android:gravity="center"
        android:textColor="@color/bg_secondary_light"
        android:textSize="30sp" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/authAnimLottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/bio_auth"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
</FrameLayout>