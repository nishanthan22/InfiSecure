<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/curved_design"
    tools:context=".UserExistenceActivity">

    <TextView
        android:id="@+id/tvShowup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:fontFamily="@font/work_sans_medium"
        android:gravity="center"
        android:text="Few steps ahead..."
        android:textColor="@color/bg_secondary_dark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you a new or existing InfiSecure user?"
        android:fontFamily="@font/work_sans_medium"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/bg_secondary_dark"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShowup" />
    <Button
        android:id="@+id/newUser"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="New user"
        android:backgroundTint="#4942E4"
        android:textSize="16sp"
        android:fontFamily="@font/work_sans_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuery" />

    <Button
        android:id="@+id/oldUser"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/work_sans_medium"
        android:text="Existing User"
        android:backgroundTint="@color/bg_primary_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newUser" />


</androidx.constraintlayout.widget.ConstraintLayout>